<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="">
            <PatternLayout pattern="%d %p %c{2} [%t] %l %m%n"></PatternLayout>
        </Console>
        <File name="File" fileName="target/logs/appTest.log">
            <PatternLayout pattern="%d %p %c{2} [%t] %m%n"></PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root>
            <AppenderRef ref="Console"></AppenderRef>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>